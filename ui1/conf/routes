# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /demo/app/demo/public folder to the /demo/public path
GET     /public/demo/                                staticDir:public

# Catch all
*       /{controller}/demo/{action}                  {controller}.{action}
